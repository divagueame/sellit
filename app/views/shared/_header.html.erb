<div class="bg-white flex justify-between items-center px-2" data-controller="menu">

    <%= link_to products_path do %>
        <h2 class="text-2xl font-bold text-teal-500"><%= t('app_name') %></h2>
    <% end %>
    <button class="sm:hidden" data-action="click->menu#toggle"><%= image_tag 'icons/menu.svg', height: 35, width: 35%></button>

    <%# Desktop %>
    <div class="hidden sm:block">
        <%= render partial: 'shared/items'%>
    </div>

    <%# Mobile %>
    <div class="sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col gap-4 min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full" data-menu-target="items">
        <button class="mb-4" data-action="click->menu#toggle"><%= image_tag 'icons/close.svg', height: 35, width: 35%></button>
        <%= render partial: 'shared/items'%>
    </div>

</div>
