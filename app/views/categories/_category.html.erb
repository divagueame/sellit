<div id="<%= dom_id category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </p>
  <%= link_to t('.edit'), edit_category_path(category) %>
  <%= link_to t('.delete'),
    category_path(category),
    data: { 
      turbo_confirm: t('common.confirm'),
      turbo_method: :delete
    } %>
</div>
